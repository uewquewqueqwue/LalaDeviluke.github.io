Options -MultiViews

RewriteEngine On
RewriteCond %{HTTPS} ^off$
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [NC,L,R]
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1 [NC,L,R]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [NC,L]